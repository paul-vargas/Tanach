<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0"><xsl:output method="html"/><xsl:strip-space elements="*"/><!--========================================================================--><!--========================================================================--><!-- Copyright C.V.Kimball 2007                                             --><!--    UnicodeRep.xsl.xml -  XSLT file for UnicodeRep.xml page.        Enter with query parameter giving the name of the font to be tested.    Without a query parameter, the results for SBL Hebrew are returned.          --><!--========================================================================--><!--========================================================================-->    <xsl:variable name="xsldate">24 Jun 2013</xsl:variable><!-- Variable build is the build date of the complete site as set by ant.   --><xsl:variable name="build">25.1</xsl:variable>  <xsl:param name="template" >Dispatcher</xsl:param>  <xsl:param name="baseURL" >&#x00a0;</xsl:param>  <!-- Font for Hebrew text                                                   --><xsl:param name="fontfamily">SBL Hebrew</xsl:param><xsl:param name="englishfontfamily">Times New Roman</xsl:param><!-- The MIME type of the favicon icon.           --><!-- This is loaded BEFORE the baseURL is defined.                          --><xsl:variable name="icontype">image.x-icon</xsl:variable><!-- URL of the favicon icon.           --><!-- This is loaded BEFORE the baseURL is defined.                          --><xsl:variable name="iconURL">Images/TanachIcon.ico</xsl:variable><!-- Param creativecommons is a URL pointing to the CreativeCommons.gif file. --><xsl:param name="creativecommons">../Images/CreativeCommons.gif</xsl:param><!-- Definitions for Unicode page.  These parameters must be set before showing      the page.  -->     <xsl:param name="querystring">&#x00a0;</xsl:param> <xsl:param name="valid">&#x00a0;</xsl:param> <xsl:param name="invalid">&#x00a0;</xsl:param> <xsl:param name="unicodestring">&#x00a0;</xsl:param> <xsl:param name="unicodeinvalids">0</xsl:param><xsl:param name="unicodenames">&#x00a0;</xsl:param> <xsl:param name="unicodehexvalues">&#x00a0;</xsl:param> <xsl:param name="unicodehtmlvalues">&#x00a0;</xsl:param> <!--========================================================================--><xsl:template match="/UnicodeRep">    <xsl:call-template name="Dispatcher"/></xsl:template><xsl:template match="/Tanach">  <xsl:choose>    <xsl:when test="$template='UnicodeRep'">      <xsl:call-template name="UnicodeRep"/>    </xsl:when>    <xsl:when test="$template='Warning'">      <xsl:call-template name="Warning"/>    </xsl:when>    </xsl:choose>  </xsl:template><!--========================================================================--><xsl:template name="Dispatcher"><html><head>   <meta http-equiv="X-UA-Compatible" content="IE=8"/>  <link href="{$iconURL}" rel="icon" type="{$icontype}"/>  <title>Unicode representation of selected text</title>  <script src="../Javascript/SarissaLib.js" type="text/javascript"> </script>  <script src="../Javascript/UtilityLib.js" type="text/javascript"> </script>  <script  type="text/javascript">     var baseURL ;    function init(){      var queryString = window.location.search.substring(1) ;       var unicodeText =  hexStringToUnicodeString(queryString) ;               baseURL = getBaseURL("UnicodeRep.xml") ;      var unicodeRepXSL = loadSarissaDoc("../XSL/UnicodeRep.xsl.xml") ;      setAsXSL(unicodeRepXSL) ;      var unicodeRepXML = loadSarissaDoc("../Books/TanachHeader.xml") ;      setXSLParam(unicodeRepXSL, "baseURL", baseURL) ;      setXSLParam(unicodeRepXSL, "querystring", queryString) ;        // Produce a warning if no input characters            if(unicodeText.length &lt; 1 ){        setTemplateToNode(unicodeRepXML, unicodeRepXSL, "Warning", document.body)         return ;      }                        var U = new UnicodeRepresentations(unicodeText) ; // The getElementById().innerHTML= x approach may NOT work on IE,// if so, return to the setXSLParam approach.       setXSLParam(unicodeRepXSL, "valid", U.Valid) ;      setXSLParam(unicodeRepXSL, "invalid", U.Invalid) ;      setXSLParam(unicodeRepXSL, "unicodestring", unicodeText) ;      setXSLParam(unicodeRepXSL, "unicodeinvalids", U.Invalids) ;      setXSLParam(unicodeRepXSL, "unicodenames", U.Names) ;      setXSLParam(unicodeRepXSL, "unicodehexvalues", U.HexValues) ;      setXSLParam(unicodeRepXSL, "unicodehtmlvalues", U.HTMLValues) ;      setTemplateToNode(unicodeRepXML, unicodeRepXSL, "UnicodeRep", document.body)                  }   </script></head><body  onload="Javascript:init()" background="../Images/Background"       style="margin-right:10pt;               margin-left:10pt; margin-top:10pt; margin-bottom:0">   &#x00a0;</body></html></xsl:template><!--========================================================================--><xsl:template name="UnicodeRep"><!--========================================================================--><html><xsl:call-template name="PageHeader">  <xsl:with-param name="title" select="'Unicode representations of the selected text'"/></xsl:call-template><p/><table width="90%" cellpadding="10" align="center" border="1">  <tr>    <td align="left">      <b>Query string: </b>    </td>    <td align="left">      <span dir="rtl" style="font-family:{$englishfontfamily};font-size:12pt;font-weight:bold;color:black"><xsl:value-of select="$querystring"/></span>      <p/>          </td>  </tr>  <tr>    <td align="left">      <b>Selected text: </b>    </td>    <td align="left">      <span dir="rtl" style="font-family:{$fontfamily};font-size:24pt;color:black"><xsl:value-of select="$unicodestring"/></span>      <p/>      <span style="font-family:Courier New;font-size:12pt;font-weight:bold"><span ><xsl:value-of select="$valid"/></span> Hebrew Unicode characters.</span>      <xsl:if test="$invalid > 0" >         <p/>        <p align="left">        <span style="color:red;font-family:Courier New;font-size:12pt;font-weight:bold">          <span><xsl:value-of select="$invalid"/></span> non-Hebrew Unicode characters:        </span>        <span style="font-family:Courier New;font-size:12pt;font-weight:bold">          <span ><xsl:value-of select="$unicodeinvalids"/></span>        </span>        <span style="color:red;font-family:Courier New;font-size:12pt;font-weight:bold"> not shown below.</span>        </p>      </xsl:if>          </td>  </tr>    <tr>    <td align="left">      <b>Unicode names: </b><br/>&#160;    </td>    <td align="left">      <span id="unicodenames" style="font-family:Courier New;font-size:12pt;font-weight:bold"><xsl:value-of select="$unicodenames"/></span>    </td>  </tr>  <tr>    <td align="left">      <b>Hexadecimal values: </b><br/>&#160;    </td>    <td align="left">      <span id="unicodehexvalues" style="font-family:Courier New;font-size:12pt;font-weight:bold"><xsl:value-of select="$unicodehexvalues"/></span>    </td>  </tr>  <tr>    <td align="left">      <b>HTML constants: </b><br/>&#160;    </td>    <td align="left">      <span id="unicodehtmlvalues" style="font-family:Courier New;font-size:12pt;font-weight:bold"><xsl:value-of select="$unicodehtmlvalues"/></span>    </td>  </tr>  </table><xsl:call-template name="PageFooter">  <xsl:with-param name="xmldate" select="/Tanach/teiHeader/profileDesc/creation/date"/></xsl:call-template></html></xsl:template><!--========================================================================--><xsl:template name="Warning"><!--========================================================================--><html><xsl:call-template name="PageHeader">  <xsl:with-param name="title" select="'Unicode representations of the selected text'"/></xsl:call-template><p/><table align="center" width="70%" border="1pt" cellpadding="20pt"><tr><td><center><h2>The query string of the calling URL was empty or incorrect!</h2></center><p/>This page converts hexadecimal values in a query string to Unicode text in various forms.  Theusual entry to the page comes from a <b><tt>Tanach.us</tt></b> Book page and has the form:<blockquote>  <a href="UnicodeRep.xml?05e905de05e2002005d905e905e805d005dc0020">    <b><tt><xsl:value-of select="$baseURL"/>UnicodeRep.xml?05e905de05e2002005d905e905e805d005dc0020</tt></b>  </a></blockquote>The query string actually provided in the call was '<b><xsl:value-of select="$querystring"/></b>'which doesn't provide any Unicode characters.</td></tr></table><p/><xsl:call-template name="PageFooter">  <xsl:with-param name="xmldate" select="/Tanach/teiHeader/profileDesc/creation/date"/></xsl:call-template></html></xsl:template><!--========================================================================--><!-- Template to head descriptive pages. --><!--========================================================================--><xsl:template name="PageHeader">  <xsl:param name="title" select="'Title not specified'"/>     <xsl:param name="wlcversion" select="''"/><table width="100%">  <tr>    <td align="left">       <span style="font-family:{$englishfontfamily};font-weight:bold;font-size:200%">        <xsl:value-of select="$title"/>          <xsl:if test="not($wlcversion='')">            <xsl:text> [</xsl:text><xsl:value-of select="$wlcversion"/><xsl:text>] </xsl:text>          </xsl:if>      </span>      <p/>         </td>  </tr></table></xsl:template><!--========================================================================--><!-- Template to end descriptive pages. --><!--========================================================================--><xsl:template name="PageFooter">  <xsl:param name="xmldate" select="'XML date not available'"/>     <xsl:param name="license" select="'../License.html'"/>   <p/><table width="100%">  <tr>    <td align="left">            <a  target="_blank" title="License information." href="{$license}" alt="License information">        <img src="../Images/CreativeCommons.gif" alt="License information" border="0"/>      </a>    </td>    <td align="right">      <b>        <a title="Build number."><xsl:value-of select="$build"/></a>      </b>      </td>  </tr></table><hr/></xsl:template></xsl:stylesheet><!--========================================================================--><!--========================================================================-->